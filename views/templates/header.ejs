<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= title %> | Foodie
  </title>
  
  <!-- Loads various JS files -->
  <% if (typeof jsFiles !== 'undefined' && jsFiles.length > 0) { %>
      <% jsFiles.forEach(file => { %>
          <script src="<%= file %>"></script>
      <% }) %>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/showdown@2/dist/showdown.min.js"></script>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/styles.css" />
  
  <!-- Loads various CSS files -->
  <% if (typeof cssFiles !== 'undefined' && cssFiles.length > 0) { %>
      <% cssFiles.forEach(file => { %>
          <link rel="stylesheet" href="<%= file %>">
      <% }) %>
  <% } %>
</head>

<body class="d-flex flex-column h-100">

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="/home">Foodie</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav ms-auto">
          <% if (typeof user !=='undefined' ) { %>
            <li class="nav-item">
              <span class="nav-link text-light"><%= user.name %></span>
            </li>
            <a class="nav-link text-light btn btn-success fancy-hover" href="/pantry">Pantry</a>
            <li class="nav-item">
              <a class="nav-link text-light btn btn-success fancy-hover" href="/stores">Store Locator</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light btn btn-success fancy-hover" href="/globe">Globe</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light btn btn-success fancy-hover" href="/profile">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light btn btn-outline-danger fancy-hover" href="/logout">Logout</a>
            </li class="nav-item">

            <% } else { %>
              
              <li class="nav-item">
                <a class="nav-link text-light btn btn-success fancy-hover" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light btn btn-outline-danger fancy-hover" href="/signup">Sign Up</a>
              </li>
              <% } %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="flex-shrink-0">

    <script src="/js/location.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>