<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Find a Store</title>
</head>
<body>
<div class="container my-4">
    <h1>Our Stores</h1>

    <p>
        Approximate location:
        <!-- always include the element with id="location" -->
        <strong id="location">
            <%= locationError ? 'Unavailable' : 'Determining…' %>
        </strong>
    </p>

    <button id="precise-btn" class="btn btn-primary mb-3">
        Use precise location
    </button>

    <ul id="store-list" class="list-group">
        <% stores.forEach(store => { %>
            <li class="list-group-item">
                <%= store.name %> — <%= store.distance.toFixed(1) %> km
            </li>
        <% }) %>
    </ul>
</div>

<script>
    // Only emit this fetch-block if we DID get coords on the server
    <% if (!locationError) { %>
    fetch('https://ipapi.co/json/')
        .then(r => r.json())
        .then(data => {
            const { city, region_code, latitude, longitude } = data;
            document.getElementById('location').innerText =
                `${city}, ${region_code}`;

            // refresh the list with approximate stores
            fetch(`/stores?lat=${latitude}&lon=${longitude}&format=json`)
                .then(r => r.json())
                .then(updateStoreList);
        })
        .catch(_ => {
            document.getElementById('location').innerText = 'Unavailable';
        });
    <% } %>

    // helper & precise‐button logic always present
    function updateStoreList(stores) {
        const ul = document.getElementById('store-list');
        ul.innerHTML = '';
        stores.forEach(s => {
            const li = document.createElement('li');
            li.className = 'list-group-item';
            li.textContent = `${s.name} — ${s.distance.toFixed(1)} km`;
            ul.appendChild(li);
        });
    }

    document.getElementById('precise-btn').addEventListener('click', () => {
        if (!navigator.geolocation) {
            return alert('Geolocation not supported by your browser.');
        }
        navigator.geolocation.getCurrentPosition(
            pos => {
                window.location.href =
                    `/stores?lat=${pos.coords.latitude}&lon=${pos.coords.longitude}`;
            },
            () => alert('Could not retrieve your precise location.')
        );
    });
</script>
</body>
</html>
